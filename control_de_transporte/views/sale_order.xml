<odoo>
    <data>
        <record id="view_order_form_transport_info" model="ir.ui.view">
            <field name="name">sale.order.form.transport.info</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="before">
                    <button name="action_view_transport_controls" type="object"
                            class="oe_stat_button"
                            icon="fa-file">
                     <field name="transport_control_count" widget="statinfo" string="Controles de Transporte"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="action_transport_control" model="ir.actions.act_window">
            <field name="name">Controles de Transporte</field>
            <field name="res_model">transport.control</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    Aqu√≠ puedes ver y gestionar los controles de transporte relacionados con el pedido de venta.
                </p>
            </field>
        </record>
    </data>
</odoo>
